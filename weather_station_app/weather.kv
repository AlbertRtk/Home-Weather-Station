# kivy 1.10.1

<Weather>:
    temperature: label_temperature
    humidity: label_humidity
    pressure: label_pressure
    last_update: label_last_update

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        canvas.before:
            # Background color
            Color:
                rgba: 1, 1, 1, .25
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: label_temperature
            font_size: '48sp'
            color: 1, 0, 0, 1
            valign: 'middle'
            text: '--'

        Label:
            id: label_humidity
            font_size: '24sp'
            color: 0, 0, 1, 1
            valign: 'middle'
            text: '--'

        Label:
            id: label_pressure
            font_size: '18sp'
            color: 0, 1, 0, 1
            valign: 'middle'
            text: '--'

        Label:
            id: label_last_update
            font_size: '12sp'
            color: 0, 0, 0, 1
            valign: 'middle'
            text: 'Last update: --'

        Button:
            text: 'Update'
            on_release: root.update()
